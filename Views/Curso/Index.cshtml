@model ListaCursoViewModel
<h1> Lista de Cursos </h1>

<div class="row">
    <h1>@ViewData["Title"]</h1>
    <table class="table">
       
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Nome</th>       
        <th scope="col">Status</th>
        <th scope="col">Concluir</th>
        <th scope="col">Deletar</th>
        <th scorpe="col">Atualizar</th>
       
    </tr>
   </thead>

<tbody>
    @foreach (var item in Model.Cursos)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>

                @if (item.Status == "Concluido")
                {
                    <p>Concluido</p>
                }    
                else
                {
                    <p>Em espera</p>    
                }
                                           
            </td>


           <td><a 
            asp-controller="Curso"
            asp-action="ModifyStatus"
            asp-route-id="@item.Id"
            class="btn btn-primary">
            Concluir
            </a></td>

            <td><a 
            asp-controller="Curso"
            asp-action="Delete"
            asp-route-id="@item.Id"
            class="btn btn-outline-danger">
            Apagar
            </a></td>
            
             <td><a 
            asp-controller="Curso"
            asp-action="Edit"
            asp-route-id="@item.Id"
            class="btn btn-outline-info">
            Atualizar
            </a></td>
        </tr>
    }
        </tbody>
    </table>
<div>